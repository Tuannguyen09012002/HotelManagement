<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <TextView
           android:layout_alignParentStart="true"
           android:text="CCCD/CMND: "
           android:textSize="18sp"
           android:id="@+id/label_name"
           android:textColor="@color/grey"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
        <TextView
            android:text="3359659544"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/label_name"
            android:textSize="18sp"
            android:id="@+id/tv_cccd"
            android:textColor="@color/color_success"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/layoutAddress"
            android:layout_below="@id/label_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentStart="true"
                android:text="Họ và tên: "
                android:textSize="18sp"
                android:id="@+id/label_address"
                android:textColor="@color/grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Le Van A"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/label_address"
                android:textSize="18sp"
                android:id="@+id/tv_name"
                android:maxLines="2"
                android:textColor="@color/black_custom"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <TextView
            android:layout_alignParentStart="true"
            android:text="Ngày sinh: "
            android:textSize="18sp"
            android:layout_below="@id/layoutAddress"
            android:id="@+id/label_birthday"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="1/1/1999"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/label_birthday"
            android:textSize="18sp"
            android:id="@+id/tv_birthday"
            android:layout_below="@id/layoutAddress"
            android:textColor="@color/black_custom"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_alignParentStart="true"
            android:text="Địa chỉ: "
            android:textSize="18sp"
            android:maxLines="2"
            android:layout_below="@id/label_birthday"
            android:id="@+id/label_cc"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Ho chi minh "
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/label_cc"
            android:textSize="16sp"
            android:id="@+id/tv_address"
            android:maxLines="2"
            android:layout_below="@id/tv_birthday"
            android:textColor="@color/black_custom"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_alignParentStart="true"
            android:text="Số điện thoại: "
            android:textSize="18sp"
            android:layout_below="@id/label_cc"
            android:id="@+id/label_phone"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Q1,Ho Chi Minh"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/label_phone"
            android:textSize="18sp"
            android:id="@+id/tv_phone"
            android:layout_below="@id/tv_address"
            android:textColor="@color/black_custom"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="10dp"
            android:id="@+id/line_1"
            android:layout_below="@id/label_phone"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/line_1"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:text="Xóa"
                android:background="@color/bg_edt_login"
                android:id="@+id/btn_delete_customer"
                android:layout_marginEnd="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:background="@color/color_success"
                android:text="Cập nhật"
                android:id="@+id/btn_update_customer"
                android:layout_marginStart="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"/>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>