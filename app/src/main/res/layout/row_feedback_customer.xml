<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:padding="10dp"
    android:layout_margin="4dp"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/avatar_default"
            android:id="@+id/iv_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            app:layout_constraintStart_toEndOf="@id/iv_avatar"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Nguyen Ngoc Huyen"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tv_name_room"
            android:layout_marginStart="10dp"
            android:id="@+id/tv_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintStart_toEndOf="@id/iv_avatar"
            android:text="P.705"
            android:textColor="@color/color_success"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_name_user"
            android:id="@+id/tv_name_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RatingBar
            android:stepSize="0.5"
            android:numStars="5"
            android:indeterminate="false"
            android:progressTint="#FFC106"
            android:rating="3.5"
            android:id="@+id/ratingbar"
            android:isIndicator="true"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/iv_avatar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            app:layout_constraintTop_toBottomOf="@id/tv_name_room"
            app:layout_constraintBottom_toTopOf="@id/tv_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/iv_avatar"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Phong con chua sach se, duoc cai le tan xinh dep."
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
          app:layout_constraintBottom_toTopOf="@id/iv_like"
            android:id="@+id/tv_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginStart="10dp"
            android:id="@+id/iv_like"
            app:layout_constraintTop_toBottomOf="@id/tv_review"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/like_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Hữu ích"
            app:layout_constraintStart_toEndOf="@id/iv_like"
            app:layout_constraintTop_toBottomOf="@id/tv_review"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>